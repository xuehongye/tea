<view class='progress'>
  <view class='proAfter' style="width:{{width}}rpx"></view>
</view>
<scroll-view scroll-y="true">
  <view class='refer'>
    <view id="drawId">
      <view class='referTit'>
        <image src="../../image/photo.png"></image>
        <view>{{postItem.name}}</view>
      </view>
      <block wx:if="{{hidden}}">
        <block wx:if="{{postItem.state==0}}">
          <view class='selectCheck'>
            <view data-item="{{index}}" wx:for="{{postItem.content}}" wx:for-index="index" wx:for-item="item" bindtap="btnOpClick" style="background:{{id==index?selectBg:defaultBg}};border:1rpx solid {{id==index?'':defaultBd}};color:{{id==index?selectText:defaultText}}"
              bindtap='selectBtn'>{{item}}</view>
          </view>
        </block>
        <block wx:elif='{{postItem.state==1}}'>
          <view class='selectCheck'>
            <view class='boxTitle'>多项选择</view>
            <checkbox-group bindchange="checkboxChange">
              <label class="checkbox" wx:for="{{postItem.content}}">
                <checkbox value="{{item}}" checked="{{item.checked}}" />{{item}}
              </label>
            </checkbox-group>
            <view class='defaultValue' bindtap='selectBtn'>{{defaultValue}}</view>
          </view>
        </block>
        <block wx:else>
          <view class='selectCheck'>
            <textarea placeholder='{{item}}' wx:for="{{postItem.content}}" placeholder-style='color:#ccc;font-size:32rpx;'/>
             <view bindtap='selectBtn' class='defaultValue'>{{textValue}}</view>
          </view>
        </block>
      </block>
      <block wx:else>
        <view class='referRight'>
          <view>{{selectCon}}</view>
          <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        </view>
      </block>
    </view>
  </view>
</scroll-view>