<view class='progress'>
  <view class='proAfter' style="width:{{width}}rpx"></view>
</view>
<scroll-view scroll-y="true">
  <view class='refer'>
    <view id="drawId">
      <view class='referTit'>
        <image src="../../image/photo.png"></image>
        <view>{{postItem.name}}</view>
      </view>
      <block wx:if="{{hidden}}">
        <view class='selectCheck'>
          <view data-item="{{index}}"  wx:for="{{postItem.content}}" wx:for-index="index" wx:for-item="item" bindtap="btnOpClick" style="background:{{id==index?selectBg:defaultBg}};border:1rpx solid {{id==index?'':defaultBd}};color:{{id==index?selectText:defaultText}}" bindtap='selectBtn'>{{item}}</view>
        </view>
      </block>
      <block wx:else>
        <view class='referRight'>
          <view>{{selectCon}}</view>
          <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        </view>
      </block>
    </view>
  </view>
</scroll-view>